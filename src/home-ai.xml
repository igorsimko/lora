<?xml version="1.0"?>
<home-ai>
  <things>
    <temperature>
        <action>info</action>
        <location>outside</location>
        <function>getTemperatureOutsideInfo</function>
    </temperature>
    <temperature>
        <action>info</action>
        <location>inside</location>
        <function>getTemperatureInsideInfo</function>
    </temperature>
    <music>
        <action>volume up</action>
        <function>volumeUp</function>
    </music>
    <music>
        <action>volume down</action>
        <function>volumeDown</function>
    </music>
    <music>
        <action>music.play</action>
        <function>playMusic</function>
    </music>
    <music>
        <action>music.stop</action>
        <function>stopMusic</function>
    </music>
    <clock>
        <action>info</action>
        <location>system</location>
        <function>getSystemTime</function>
    </clock>
  </things>
  <agents>
        <intent>
            <uids>
                <uid>music.play</uid>
                <uid>music_player_control.play</uid>
            </uids>
            <function>
                <name>playMusic</name>
            </function>
        </intent>
        <intent>
            <uids>
                <uid>music_player_control.stop</uid>
            </uids>
            <function>
                <name>stopMusic</name>
            </function>
        </intent>
        <intent>
            <uids>
                <uid>smarthome.device.volume.set</uid>
            </uids>
            <function>
                <name>setVolume</name>
                <parameters>
                    <param name="device" value="device"></param>
                    <param name="final-value" value="finalValue"></param>
                </parameters>
            </function>
        </intent>
        <intent>
            <uids>
                <uid>weather.temperature</uid>
            </uids>
            <function>
                <name>getTemperatureOutsideInfo</name>
            </function>
        </intent>
  </agents>
</home-ai>
